{{#each this}}
<h2 class="country-info-title">{{this.name}}</h2>
<div class="country-info-container">
    <ul class="country-info-ul">
        <li><span class="country-info-span">Capital:</span> {{this.capital}}</li>
        <li><span class="country-info-span">Population:</span> {{this.population}}</li>
        <li><span class="country-info-span">Languages:</span>
            <ul>
                {{#each languages}}
                <li class="country-info-language">{{this.name}}</li>
                {{/each}}
            </ul>
        </li>

    </ul>
</div>
<img src="{{this.flag}}" alt="{{this.name}}" class="country-info-img">
{{/each}}